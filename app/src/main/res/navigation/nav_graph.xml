<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/nav_graph"
	app:startDestination="@+id/posts">
	<fragment
		android:id="@+id/posts"
		android:name="kz.tutorial.jsonplaceholdertypicode.presentation.posts.PostsFragment">
		<action app:destination="@+id/details"
			android:id="@+id/posts_to_details"/>
	</fragment>
	
	<fragment
		android:id="@+id/details"
		android:name="kz.tutorial.jsonplaceholdertypicode.presentation.details.DetailsFragment">
	<argument
		android:name="id"
		app:argType="integer"
		app:nullable="false"/>
	</fragment>
	
</navigation>